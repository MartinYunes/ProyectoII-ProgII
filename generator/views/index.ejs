
<!-- Include Head -->

	<%- include('./partials/head') %>


	<!-- Header -->
	<%- include('./partials/headerNoLogueado') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas"> <!-- cambiar aca el bannner -->
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">

				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i= 0; i < productos.length; i++){ %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% for(let i= 0; i < productos.length; i++) %>
					<a href="product.html">
					
					<a href="/product/detalle">
						<figure class="product-box_image">
							<img src=<%= productos[i].imagen%> alt="<% productos[i].modeloAuto %>">
						</figure>
						<article class="product-box_data">
							<h2><%=productos[i].nombre%></h2>
							<p><%=productos[i].descripcion%></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>

		</div>
	</div>

	<%- include('./partials/footer') %>
	<!-- /Novedades -->
